using System;

// Base class
class Vehicle
{
    public void StartEngine()
    {
        Console.WriteLine("Engine started");
    }
}

// Derived class
class Car : Vehicle
{
    public void Drive()
    {
        StartEngine(); // Calling the base class method
        Console.WriteLine("Car is driving");
    }
}

class Program
{
    static void Main()
    {
        // Creating an instance of the derived class
        Car myCar = new Car();

        // Calling the StartEngine method from the base class
        Console.WriteLine("Calling StartEngine method from the base class:");
        myCar.StartEngine();
        Console.WriteLine();

        // Calling the Drive method from the derived class
        Console.WriteLine("Calling Drive method from the derived class:");
        myCar.Drive();
    }
}



