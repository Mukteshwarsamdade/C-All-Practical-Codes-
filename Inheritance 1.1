using System;

public class AccountCreditInfo // Base class
{
    public string Credit()
    {
        return "Balance is credited";
    }
}

public class DebitInfo : AccountCreditInfo // Derived class
{
    public string Debit()
    {
        Credit(); // Calling the base class method
        return "Balance is debited";
    }
}

class Program
{
    static void Main()
    {
        // Creating an instance of the derived class
        DebitInfo debitAccount = new DebitInfo();

        // Calling the Credit method from the base class
        string creditMessage = debitAccount.Credit();
        Console.WriteLine(creditMessage);

        // Calling the Debit method from the derived class
        string debitMessage = debitAccount.Debit();
        Console.WriteLine(debitMessage);
    }
}



